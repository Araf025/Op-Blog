<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>@ViewBag.Title Op Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .font {
            font-family: "Segoe Script";
        }

        .sidebar a {
            padding: 6px 8px 6px 16px;
            text-decoration: none;
            font-size: 20px;
            color: #818181;
            display: block;
        }

            .sidebar a:hover {
                color: #f1f1f1;
            }

        .main {
            margin-left: 160px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        .navbar-custom {
            color: #FFFFFF;
            background-color: #2B1E18;
        }

        a:hover {
            color: #0DB7C4;
            text-decoration: none;
        }

        a {
            color: #696969;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: 15px;
            font-weight: bold;
        }

        h5 {
            color: white;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: 18px;
        }

        .b {
            color: white;
            border-style: solid;
            border-width: 1px;
            border-color: #363636;
            padding: 10px;
        }

        .footerfont {
            color: #363636;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: 14px;
            font-weight: bold;
        }

        .footerfontadd {
            color: #363636;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: 13px;
            padding-top: 13px;
            padding-left: 10px;
            font-weight: bold;
        }

            .footerfontadd:hover {
                color: #0DB7C4;
                text-decoration: none;
            }

        .footerfont:hover {
            color: #0DB7C4;
            text-decoration: none;
        }

        .producttags {
            color: #363636;
            background-color: #1B1B1B;
            border-style: solid;
            border-width: 1px;
            border-color: #363636;
            padding: 5px;
        }

        .productborder {
            border-style: solid;
            border-width: 1px;
            border-color: #E5E5E5;
            padding: 15px;
        }

            .productborder:hover {
                background-color: #E3E3E3;
            }

        .productname {
            text-align: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: #696969;
        }

        .btncolor {
            background-color: #00B28A;
            color: white;
        }

            .btncolor:hover {
                background-color: #0DB7C4;
            }

        .navbar-toggler-icon {
            background-color: #363636;
        }

        .navbar-brand {
            color: #363636;
        }

        img {
            width: 100%;
            height: auto;
        }
    </style>

    <script>

        $(document).ready(function () {
            $("button").click(function () {
                $("div").animate({
                    height: 'toggle'
                });
            });
        });
    </script>

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Op Blog", "Browse", "Blog", new { area = "" }, new { @class = "navbar-brand font" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @using Microsoft.AspNet.Identity
                    @if (User.Identity.GetUserName() == "ar@id.com")
                    {
                        <li>@Html.ActionLink("Manage Blog", "Manage", "Blog")</li>
                        <li>
                            <a href="@Url.Action("BrowseApprove", "Blog")"><span>Approve</span><span class="badge badge-notify">@ViewBag.countApprovals</span></a>



                        </li>
                    }
                    else
                    {

                    }

                    <li>@Html.ActionLink("Post Blog", "Create", "Blog")</li>
                    <li>@Html.ActionLink("Blog", "Browse", "Blog")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <footer style="background-color:#1B1B1B;">


        <div class="row" style="background-color:#1B1B1B;">

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <p style="padding-left:50px;padding-top:5px; font-family:'Segoe Script'; ">&reg; @DateTime.Now.Year - By <a href="https://www.linkedin.com/in/jubayer-araf-87b490152">Araf Jubayer</a></p>
                </div>
            </div>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
