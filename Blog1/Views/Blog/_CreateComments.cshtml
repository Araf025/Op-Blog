@model Blog1.Models.BlogComment

<style>
    .text1{
        width:4000px;
    }
</style>

@using (Html.BeginForm("CreateComment", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        
            
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6" style="padding-top:20px;">
                            <button type="submit" class="btn btn-success green">Comment</button>
                        </div>
                    </div>
                </form>
        
           <!-- Status Upload  -->
        <!-- Widget Area -->

    </div>
}
