
@{
    ViewBag.Title = "CategorizedBrowse";
}



@model IEnumerable<Blog1.Models.Blog>

<style>
    .blog-container {
        background: #EFF0F1;
    }

        .blog-container img {
            width: 100%;
        }

        .blog-container div {
            padding: 10px;
        }

    .box {
        background-color: rosybrown;
        height: 60%;
        width: 60%;
        left: 20%;
        top: 20%;
    }

    .b {
        color: white;
    }

    .button2:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }
    .active {
        background-color: #EEEEEE;
        
    }
</style>

<div class="row">
    <div>
        <nav style="padding-left:70px" class="navbar navbar-expand-md b">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" style="border-color:black">
                    <span class="icon-bar" style="background-color:black;"></span>
                    <span class="icon-bar" style="background-color:black;"></span>
                    <span class="icon-bar" style="background-color:black;"></span>
                </button>
                <a class="navbar-brand" href="#">Categories</a>
            </div>
            <div class="navbar-collapse collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    @if (@ViewBag.category == @ViewBag.Movies)
                    {
                        <li class="active"><a style="color:#0DBCC6" href="@Url.Action("CategorizedBrowse", "Blog",new { id="Movies" })"><span>Movies </span><span class="badge badge-notify">@ViewBag.countblogMovies</span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("CategorizedBrowse", "Blog",new { id="Movies" })"><span>Movies </span><span class="badge badge-notify">@ViewBag.countblogMovies</span></a></li>
                    }
                    @if (@ViewBag.category == @ViewBag.Technologies)
                    {
                        <li class="active"><a  style="color:#0DBCC6" href="@Url.Action("CategorizedBrowse", "Blog",new { id="Technologies" })"><span>Technologies </span><span class="badge badge-notify">@ViewBag.countblogTechnologies</span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("CategorizedBrowse", "Blog",new { id="Technologies" })"><span>Technologies </span><span class="badge badge-notify">@ViewBag.countblogTechnologies</span></a></li>
                    }
                    @if (@ViewBag.category == @ViewBag.Games)
                    {
                        <li class="active"><a  style="color:#0DBCC6" href="@Url.Action("CategorizedBrowse", "Blog",new { id="Games" })"><span>Games </span><span class="badge badge-notify">@ViewBag.countblogGames</span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("CategorizedBrowse", "Blog",new { id="Games" })"><span>Games </span><span class="badge badge-notify">@ViewBag.countblogGames</span></a></li>
                    }
                    @if (@ViewBag.category == @ViewBag.Animals)
                    {
                        <li class="active"><a  style="color:#0DBCC6" href="@Url.Action("CategorizedBrowse", "Blog",new { id="Animals" })"><span>Animals </span><span class="badge badge-notify">@ViewBag.countblogAnimals</span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("CategorizedBrowse", "Blog",new { id="Animals" })"><span>Animals </span><span class="badge badge-notify">@ViewBag.countblogAnimals</span></a></li>
                    }
                    @if (@ViewBag.category == @ViewBag.Art)
                    {
                        <li class="active"><a  style="color:#0DBCC6" href="@Url.Action("CategorizedBrowse", "Blog",new { id="Art" })"><span>Art </span><span class="badge badge-notify">@ViewBag.countblogArt</span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("CategorizedBrowse", "Blog",new { id="Art" })"><span>Art </span><span class="badge badge-notify">@ViewBag.countblogArt</span></a></li>
                    }
                    @if (@ViewBag.category == @ViewBag.Supers)
                    {
                        <li class="active"><a  style="color:#0DBCC6" href="@Url.Action("CategorizedBrowse", "Blog",new { id="Supers" })"><span>Supers </span><span class="badge badge-notify">@ViewBag.countblogSupers</span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("CategorizedBrowse", "Blog",new { id="Supers" })"><span>Supers </span><span class="badge badge-notify">@ViewBag.countblogSupers</span></a></li>
                    }





                </ul>


            </div>
        </nav>

    </div>
</div>


<div class="col-md-1"></div>
<div class="col-md-7">



    @foreach (var item in Model)
    {
        <div class="row">
            <div class="blog-container button2">


                <img src="@item.ThumbnailImageUrl" class="img-responsive" alt="Cover">
                <div>
                    <h2>
                        @Html.DisplayFor(modelItem => item.Title)
                    </h2>
                    By <a href="#"> @Html.ActionLink(@item.Author.ToString(), "BrowseAuthor", new { id1 = item.Author }) </a>
                    <br /> Category : <a href="#"> @Html.DisplayFor(modelItem => item.Category) </a>
                    <br />@Html.DisplayFor(modelItem => item.Content)
                    <br />@Html.ActionLink("more..", "Details", new { id = item.BlogId })
                    <div class="row">
                        <div class="col-md-6" style="text-align:left">
                            <a><i class="fa fa-heart" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.BlogLikes.Count)</a>
                        </div>

                        <div class="col-md-6" style="text-align:right">
                            <a><i class="fa fa-comments" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.BlogComments.Count)</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />

    }
</div>
<div class="col-md-4">
    @Html.Partial("TrendingPost", ViewBag.blgs as IEnumerable<Blog1.Models.Blog>)

</div>



