
@{
    ViewBag.Title = "BrowseBlogSection";
}



@model IEnumerable<Blog1.Models.BlogSection>

<style>
    .blog-container {
        background: white;
    }

        .blog-container img {
            width: 100%;
        }

        .blog-container div {
            padding: 10px;
        }

    .box {
        background-color: rosybrown;
        height: 60%;
        width: 60%;
        left: 20%;
        top: 20%;
    }

    .b {
        color: white;
    }

</style>

<div class="row">

    <div class="col-md-1"></div>
    <div class="col-md-7" style="padding:30px">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="blog-container">



                    
                    <img src="@item.ImageUrl" class="img-responsive" alt="Cover">
                    
                    
                    <div>
                        <h2>
                            @Html.DisplayFor(modelItem => item.SectionTitle)
                        </h2>
                        <br />@Html.DisplayFor(modelItem => item.SectionContent)
                        <br />
                        <hr />
                    </div>
                </div>
            </div>
            

        }
    </div>



</div>